<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Document</title>
</head>
<body>
    
    <%- include('./includes/header.ejs') %>
    
    <div class="body">
        <div class="container page-content">
            <h2 class="title music-title"><%= music.title %></h2>

            <audio class="music" controls>
                <source class="music-item" src="./../<%= music.path %>" type="audio/mpeg">
                Your browser does not support the audio tag.
            </audio>

            <form action="/view/<%= music._id %>/comment/<%= music.userId %>" method="post" class="add-comment">
                <label for="comment">Add Comment</label>
                <textarea name="comment" id="comment" cols="40" rows="5"></textarea>
                <button <% if (!isLogin) { %>
                    disabled
                <% } %>>Add</button>
            </form>

            <div class="comment-container">
                <% comments.forEach(comment => { %>
                    <div class="comment">
                        <div>
                            <p><%= comment.author %></p>
                            <p class="comment-text"><%= comment.content %></p>
                        </div>
                        <div class="delete-comment">
                            <% if (isLogin) { %>
                                <% if (comment.authorId.toString() == user._id.toString()) { %>
                                        <a href="/delete-comment/<%= music._id %>/<%= comment._id %>"><i class="fa-solid fa-trash-can"></i></a>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>